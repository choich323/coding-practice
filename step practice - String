// #1
void Quiz_1() {
    char ch;
    cin >> ch;
    cout << (int)ch;
}

// #2
void Quiz_2() {
    int N;
    cin >> N;
    int sum = 0;

    char num;

    for(int i = 0; i < N; i++){
        cin >> num;
        sum = sum + (int)num - 48;
    }
    cout << sum;
}
// #3
void Quiz_3() {
    char arr[101] = { 0 };
    cin >> arr;
    for (int i = 97; i <= 122; i++)
    {
        int j = 0;
        while (arr[j] != 0)
        {
            if (arr[j] == (char)i)
                break;
            j++;
        }
        if (arr[j] == (char)i)
            cout << j << " ";
        else
            cout << "-1 ";
    }
}
// #4
void Quiz_4() {
    int T, R;
    cin >> T;
    string S;

    for (int i = 0; i < T; i++) {
        cin >> R >> S;
        for (int j = 0; j < S.length(); j++) {
            for (int k = 0; k < R; k++) {
                cout << S[j];
            }
        }
        cout << endl;
    }
}
// #5
void Quiz_5() {

    char* S = new char[1000000];

    for (int i = 0; i < 1000000; i++) {
        S[i] = 0;
    }

    char Alpha[26] = { 0 };
    char alpha[26] = { 0 };

    int idx = 0;
    for (int i = 97; i <= 122; i++) {
        alpha[idx] = i;
        idx++;
    }
    idx = 0;
    for (int i = 65; i <= 90; i++) {
        Alpha[idx] = i;
        idx++;
    }
   
    cin >> S;

    int count[26] = { 0 };
 
    for (int j = 0; S[j] != 0; j++) {
        for (int k = 0; k < 26; k++) {  // 대문자 검색
            if (S[j] == Alpha[k]) {
                count[k]++;
                break;
            }
        }
        for (int k = 0; k < 26; k++) {  // 소문자 검색
            if (S[j] == alpha[k]) {
                count[k]++;
                break;
            }
        }
    }

    int max = 0;
    int max_idx = 0;

    for (int p = 0; p < 26; p++) {
        if (max < count[p]) {
            max = count[p];
            max_idx = p;
        }
    }

    bool x2 = false;
    for (int p = 0; p < 26; p++) {
        if (p != max_idx) {
            if (count[p] == max)
                x2 = true;
        }
    }

    if (x2)
        cout << "?";
    else
        cout << Alpha[max_idx];

    delete[] S;
}
// #6
void Quiz_6() {
    string str;

    getline(cin, str);

    int word = 0;

    for (int i = 0; i < str.length(); i++) {
        if (i != 0) {
            if (i != str.length() - 1)
                if (str[i] == ' ')
                    word++;
        }
    }
    if (str == " ")
        word = -1;

    cout << word + 1;
}
// #7
void Quiz_7() {
    string A, B, max;
    cin >> A >> B;

    if (A[2] > B[2])
        max = A;
    else if (A[2] < B[2])
        max = B;
    else {
        if(A[1] > B[1])
            max = A;
        else if (A[1] < B[1])
            max = B;
        else {
            if (A[0] > B[0])
                max = A;
            else if (A[0] < B[0])
                max = B;
        }
    }

   cout << max[2] << max[1] << max[0];
}
// #8
void Quiz_8(){
    char arr[16];

    for (int i = 0; i < 15; i++) {
        arr[i] = 0;
    }

    cin >> arr;

    int time = 0;

    for (int i = 0; i < 15; i++) {
        if (arr[i] >= 65 && arr[i] <= 76) {
            if (arr[i] >= 65 && arr[i] <= 70) {
                if (arr[i] >= 65 && arr[i] <= 67) {
                    time = time + 3;
                }
                else
                    time = time + 4;
            }
            else {
                if (arr[i] >= 71 && arr[i] <= 73) {
                    time = time + 5;
                }
                else
                    time = time + 6;
            }
        }
        else if (arr[i] >= 77 && arr[i] <= 90) {
            if (arr[i] >= 77 && arr[i] <= 83) {
                if (arr[i] >= 77 && arr[i] <= 79) {
                    time = time + 7;
                }
                else
                    time = time + 8;
            }
            else {
                if (arr[i] >= 84 && arr[i] <= 86) {
                    time = time + 9;
                }
                else
                    time = time + 10;
            }
        }
        else
            break;
    }
    cout << time;
}
