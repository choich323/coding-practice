// #1
void Quiz_1() {
    char ch;
    cin >> ch;
    cout << (int)ch;
}

// #2
void Quiz_2() {
    int N;
    cin >> N;
    int sum = 0;

    char num;

    for(int i = 0; i < N; i++){
        cin >> num;
        sum = sum + (int)num - 48;
    }
    cout << sum;
}
// #3
void Quiz_3() {
    char arr[101] = { 0 };
    cin >> arr;
    for (int i = 97; i <= 122; i++)
    {
        int j = 0;
        while (arr[j] != 0)
        {
            if (arr[j] == (char)i)
                break;
            j++;
        }
        if (arr[j] == (char)i)
            cout << j << " ";
        else
            cout << "-1 ";
    }
}
// #4
void Quiz_4() {
    int T, R;
    cin >> T;
    string S;

    for (int i = 0; i < T; i++) {
        cin >> R >> S;
        for (int j = 0; j < S.length(); j++) {
            for (int k = 0; k < R; k++) {
                cout << S[j];
            }
        }
        cout << endl;
    }
}
